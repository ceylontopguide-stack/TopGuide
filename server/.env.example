# ======== Core Server Configuration ========
PORT=5000
NODE_ENV=development  # Change to 'production' when deploying

# ======== Database (MongoDB Atlas) ========
MONGO_URI=your_mongodb_connection_string

# ======== Authentication & Sessions ========
SESSION_SECRET=your_session_secret
JWT_SECRET=your_jwt_secret

# ======== Zoho Mail SMTP ========
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=465
EMAIL_USER=your_email@domain.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=your_email@domain.com

# ======== CORS & Frontend URLs ========
CLIENT_ORIGIN=http://localhost:3000  # For local development
PRODUCTION_FRONTEND_URL=https://your-vercel-app.vercel.app

# ======== Backend URLs ========
SERVER_BASE_URL=http://localhost:5000

# ======== File Uploads ========
UPLOADS_DIR=uploads
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ======== Timers ========
RESET_PASSWORD_EXPIRES=3600000  # 1 hour in ms
BCRYPT_SALT_ROUNDS=12
SESSION_MAX_AGE=86400000  # 24 hours
REVIEW_TOKEN_EXPIRY=86400000  # 24 hours

# ======== Cloudinary Configuration ========
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_MAX_FILE_SIZE=5  # MB
CLOUDINARY_UPLOAD_FOLDER=tour_photos

# ======== Frontend Env Config ========
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_CLOUDINARY_BASE_URL=https://res.cloudinary.com
